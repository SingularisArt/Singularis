#!/usr/bin/env bash

bookmark_file="$XDG_DATA_HOME/bookmarks"
output=$(rofi -markup -matching fuzzy -dmenu -p "Select Bookmark" -format s -i -lines 5 \
  -markup-rows -kb-row-down Down -kb-custom-1 Ctrl+n < "$bookmark_file")

if [ "$output" != "--------------------------------------------------------------" ]; then
  echo "$output" | tr -d '\n' | xclip -selection clipboard
fi
