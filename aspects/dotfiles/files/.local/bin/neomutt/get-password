#!/usr/bin/bash

password="$1"
key="$2"
copy_clipboard="$3"

pass_output=$(pass "$password")

if [ -z "$key" ]; then
  password=$(echo "$pass_output" | head -n 1)
fi

if [ -n "$key" ]; then
  password=$(echo "$pass_output" | grep "$key: " | sed "s/$key: //g")
fi

if [ -n "$copy_clipboard" ]; then
  echo -n "$password" | xclip -selection clipboard
fi

echo "$password"
