#!/bin/sh

/usr/bin/notify-send "ğŸ“¦ Repository Sync" "Checking for package updates..."

sudo pacman -Syyuw --noconfirm || notify-send "Error downloading updates.
Check your internet connection, if pacman is already running, or run update manually to see errors."

if pacman -Qu | grep -v "\[ignored\]"; then
  /usr/bin/notify-send "ğŸ Repository Sync" "Updates available."
else
  /usr/bin/notify-send "ğŸ“¦ Repository Sync"  "Sync complete. No new packages for update."
fi
