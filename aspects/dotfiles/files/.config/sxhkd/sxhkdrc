##################
#  Applications  #
##################

super + Return
  kitty
super + shift + n
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && ~/.local/bin/scpad
super + w
  $BROWSER
super + m
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "neomutt"
super + shift + m
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && ~/.local/bin/neomutt/send-mail
super + n
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "newsboat"
super + e
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "ncmpcpp"
super + shift + c
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "castero"
super + c
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "calcure" # "calcurse"
