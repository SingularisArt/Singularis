###########
#  Audio  #
###########

super + alt + t
  mpc toggle
super + alt + r
  mpc seek 0
super + alt + shift + bracketleft
  mpc seek +60
super + alt + shift + bracketright
  mpc seek -60
super + alt  + bracketleft
  mpc seek +10
super + alt  + bracketright
  mpc seek -10
super + alt + comma
  mpc prev
super + alt + period
  mpc next
super + alt + u
  pamixer -i 5 && ~/.local/bin/volume-indicator show
super + alt + d
  pamixer -d 5 && ~/.local/bin/volume-indicator show

