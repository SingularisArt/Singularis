  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && ~/.local/bin/neomutt/send_mail
super + n
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "newsboat"
super + e
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "ncmpcpp"
super + shift + c
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "castero"
super + c
  bspc rule -a kitty -o state=floating center=true rectangle=800x600+0+0 && kitty "calcurse"
super + shift + p
