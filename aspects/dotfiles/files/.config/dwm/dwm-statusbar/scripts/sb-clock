#!/bin/sh

source ~/.config/zsh/exports.zsh

clock=$(date '+%I')

case "$clock" in
	"00") clock_icon="ğŸ•›" ;;
	"01") clock_icon="ğŸ•" ;;
	"02") clock_icon="ğŸ•‘" ;;
	"03") clock_icon="ğŸ•’" ;;
	"04") clock_icon="ğŸ•“" ;;
	"05") clock_icon="ğŸ•”" ;;
	"06") clock_icon="ğŸ••" ;;
	"07") clock_icon="ğŸ•–" ;;
	"08") clock_icon="ğŸ•—" ;;
	"09") clock_icon="ğŸ•˜" ;;
	"10") clock_icon="ğŸ•™" ;;
	"11") clock_icon="ğŸ•š" ;;
	"12") clock_icon="ğŸ•›" ;;
esac

date_icon="ğŸ“…"

case $BLOCK_BUTTON in
  1) notify-send "This Month" "$(cal)" && notify-send "Appointments" "$(calcurse -a)" && notify-send "Todo's" "$(calcurse -t | grep -E '[0-9].')" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments via \`calcurse -a\`, todo's via \`calcurse -t\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR $0" ;;
esac

current_date=$(date "+%b %d %Y (%a)")
time=$(date "+%I:%M%p")

echo "${date_icon} ${current_date} ${clock_icon} ${time}"
