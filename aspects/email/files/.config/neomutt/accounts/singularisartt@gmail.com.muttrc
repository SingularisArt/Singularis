# vim: filetype=neomuttrc

set realname = "Hashem Damrah"
set from = "singularisartt@gmail.com"
set sendmail = "msmtp -a singularisartt@gmail.com"
alias me singularisartt <singularisartt@gmail.com>
set folder = "~/.local/share/mail/singularisartt@gmail.com"
